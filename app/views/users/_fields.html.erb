<div class="header field">
	<h1>Sign up</h1>
</div>

<div class="field">
	<%= f.label :name, "Name" %>  <br />
	<%= f.text_field :name %>
</div>

<div class="field">
	<%= f.label :email %>  <br />
	<%= f.text_field :email %>
</div>

<div class="field">
	<%= f.label :password %>  <br />  
	<%= f.password_field :password %>  
	<!-- cannot use f.text_field because it shows password when typing -->
</div>	

<div class="field">
	<%= f.label :password_confirmation, "Confirm Password" %>  <br />
	<%= f.password_field :password_confirmation %>
</div>

<div class="field">
	<%= f.label :gender %>  <br />
        <%= f.radio_button :gender, '1' %>Female <br/>
        <%= f.radio_button :gender, '2' %>Male <br/>
</div>

