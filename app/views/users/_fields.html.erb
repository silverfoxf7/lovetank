<%= render 'shared/error_messages', :object => f.object %>

<div class="field">
	<%= f.label :name, "Username" %>  <br />
	<%= f.text_field :name %>
</div>

<div class="field">
	<%= f.label :email %>  <br />
	<%= f.text_field :email %>
</div>

<div class="field">
	<%= f.label :password %>  <br />  
	<%= f.password_field :password %>  
	<!-- cannot use f.text_field because it shows password when typing -->
</div>	

<div class="field">
	<%= f.label :password_confirmation, "Confirm Password" %>  <br />
	<%= f.password_field :password_confirmation %>
</div>

<div class="field">
	<%= f.label :account_type %>  <br />
        <%= f.radio_button :account_type, '1' %>Freelance Attorney <br/>
        <%= f.radio_button :account_type, '2' %>Placement Agency<br/>
        <%= f.radio_button :account_type, '3' %>Law Firm<br/>
        <%= f.radio_button :account_type, '4' %>Client<br/>
</div>

