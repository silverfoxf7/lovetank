
<ul class='star-rating'>
  <% unless asset.average_rating.nil? %>
    <li class='current-rating' style='width:<%= (asset.average_rating * 25).to_i -%>px;'>
    </li>
  <% end %>
    <li>
        <%= link_to( "1", url_for(:controller => "ratings",
